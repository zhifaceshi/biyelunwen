  "validation_iterator": {
    "type": "basic",
    "batch_size": 128
  },
  "distributed": {
    "cuda_devices": [0, 1]
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 5e-5

    },
    "learning_rate_scheduler": {
      "type": "slanted_triangular",
      "num_epochs": 15,
      "num_steps_per_epoch": 8829
    },
    "validation_metric": "+f1",
    "num_epochs": 50,

    "patience": null
  }
