{
  "dataset_reader": {
    "type": "two_stage",
    "pretrained_model_pth": "/storage/gs2018/liangjiaxi/CORPUS/PRETRAINED/bert/",
    "mode": "s2po"
  },
  "validation_dataset_reader": {
    "type": "valid",
    "pretrained_model_pth": "/storage/gs2018/liangjiaxi/CORPUS/PRETRAINED/bert/"
  },
  "train_data_path": "/storage/gs2018/liangjiaxi/bishe/data/processed_data/_train.txt",
  "validation_data_path": "/storage/gs2018/liangjiaxi/bishe/data/processed_data/_dev.txt",
  "test_data_path": "/storage/gs2018/liangjiaxi/bishe/data/processed_data/_test.txt",
  "evaluate_on_test": true,
  "model": {
    "type": "twostagemodel",
    "encoder": {
      "type": "encoder",
      "text_field_embedder": {
        "type": "basic",

        "token_embedders": {
          "tokens": {
              "type": "reduced_pretrained_transformer",
              "model_name": "/storage/gs2018/liangjiaxi/CORPUS/PRETRAINED/bert/",
            "reduced_num": 2

          }
        }

      },
//      "encoder": {
//        "type": "lstm",
//        "num_layers": 2,
//        "bidirectional": true,
//        "input_size": 768,
//        "hidden_size": 384
//      }
    },
    "one_decoder": {
      "type": "feedforward",
      "feedforward": {
        "input_dim": 768,
        "num_layers": 1,
        "hidden_dims": 1,
        "activations": "linear"
      }
    },
    "many_decoder": {
      "type": "feedforward",
      "feedforward": {
        "input_dim": 768,
        "num_layers": 1,
        "hidden_dims": 49,
        "activations": "linear"
      }
    },
    "span_extractor": {
      "type": "endpoint",
      "input_dim": 768,
      "combination": "x+y"
    },
    "mode": "s2po"
