{
  "dataset_reader": {
    "type": "two_stage",
    "mode": "s2po"
  },
  "validation_dataset_reader": {
    "type": "valid"
  },
  "train_data_path": "/storage/gs2018/liangjiaxi/bishe/data/processed_data/_train.txt",
  "validation_data_path": "/storage/gs2018/liangjiaxi/bishe/data/processed_data/_dev.txt",
  "test_data_path": "/storage/gs2018/liangjiaxi/bishe/data/processed_data/_test.txt",
  "evaluate_on_test": true,
  "model": {
    "type": "twostagemodel",
    "encoder": {
      "type": "encoder",
      "text_field_embedder": {
        "type": "basic",

        "token_embedders": {
          "tokens": {
            "type": "embedding",
            "embedding_dim": 768,
            "trainable": true
          }
        }

      },
      "encoder": {
        "type": "lstm",
        "num_layers": 2,
        "bidirectional": true,
        "input_size": 768,
        "hidden_size": 384
      }
    },
    "one_decoder": {
      "type": "feedforward",
      "feedforward": {
        "input_dim": 768,
        "num_layers": 1,
        "hidden_dims": 1,
        "activations": "linear"
      }
    },
    "many_decoder": {
      "type": "feedforward",
      "feedforward": {
        "input_dim": 768,
        "num_layers": 1,
        "hidden_dims": 49,
        "activations": "linear"
      }
    },
    "span_extractor": {
      "type": "endpoint",
      "input_dim": 768,
      "combination": "x+y"
    },
    "mode": "s2po"
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["tokens", "tokens___tokens"]],
    "batch_size": 128
  },
  "validation_iterator": {
    "type": "basic",
    "batch_size": 128
  },
  "distributed": {
    "cuda_devices": [0, 1]
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 5e-4

    },
    "learning_rate_scheduler": {
      "type": "slanted_triangular",
      "num_epochs": 15,
      "num_steps_per_epoch": 8829
    },
    "validation_metric": "+f1",
    "num_epochs": 50,
    //        "grad_norm": 10.0,
    "patience": null
  }
}